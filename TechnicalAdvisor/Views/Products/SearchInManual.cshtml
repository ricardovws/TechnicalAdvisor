@model TechnicalAdvisor.Models.ViewModels.SearchInManualViewModel
@{
    ViewData["Title"] = "SearchInManual";
}

<h2>SearchInManual</h2>


<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-2">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="/Products/ShowPublication/1#">Home</a>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-2">
            <ul class="nav navbar-nav">
                <li class="active"><a href="#">Link <span class="sr-only">(current)</span></a></li>
                <li><a href="#">Link</a></li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="#">Action</a></li>
                        <li><a href="#">Another action</a></li>
                        <li><a href="#">Something else here</a></li>
                        <li class="divider"></li>
                        <li><a href="#">Separated link</a></li>
                        <li class="divider"></li>
                        <li><a href="#">One more separated link</a></li>
                    </ul>
                </li>
            </ul>






            @*mecanismo de busca*@
            <form asp-action="SearchInManual" class="navbar-form navbar-left" role="search">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Search" name="somethingToSearch">
                </div>

                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    </div>
</nav>


<p>Your search about <strong>@Html.DisplayFor(model => model.WordSearch)</strong> was found in:</p>

<div class="panel panel-success">
    <div class="panel-heading">
        <h3 class="panel-title">
            Page #@Html.DisplayFor(model => model.NumberPage)  —  It appears @Html.DisplayFor(model => model.Times) times in this page.
        </h3> 
    </div>
    <div class="panel-body">
        <p><strong>Chapter: </strong>@Html.DisplayFor(model => model.ChapterTitle)</p>
        <p></p>
        <p><strong>Section: </strong>@Html.DisplayFor(model => model.SectionTitle)</p>
    </div>
</div>













