                    <div class="form-group">
                        <input type="text" class="form-control"
                               placeholder="&#128270; Você pode fazer a busca por produto, modelo específico ou número do chassi."
                               name="somethingToSearch">
                    </div>
                    <button id="search-button" type="submit" class="btn btn-default">Buscar &#128269;</button>


                </div>

            </section>
        </div>
    </div>

    @* Lista com todos os manuais!!! *@


    <div class="listOfResults">

        <div class="listOfResultsHeader">
            <a id="search-button_again">
                <i class="tooltip search_icon small material-icons"
                   title="Realizar nova busca!">
                    search
                </i>
            </a>

            <h2 id="resultsHeader">Lista de resultados:</h2>

            <p></p>
        </div>

        <ul class="searchResultsList">

            @foreach (var item in Model)
            {
                <li class="publicationLineInfo">
                    <div>
                        <img class="product_image" src="~/images/gallardo.svg" />
                    </div>
                    <div class="publicationLineInfo__">
                        <h3>@Html.DisplayFor(modelItem => item.Name)</h3>
                        <ul class="publicationLineInfoDetails">
                            <li>
                                <a href="https://www.google.com" type="button">
                                    <i class="tooltip small material-icons"
                                       title="Acessar manual">
                                        insert_drive_file
                                    </i>
                                </a>
                            </li>

                            <li>
                                <a href="https://www.bing.com" type="button">
                                    <i class="tooltip small material-icons"
                                       title="Acessar tabela de manutenção">
                                        grid_on
                                    </i>
                                </a>
                            </li>
                        </ul>
                    </div>

                </li>
            }

        </ul>
    </div>
    <p class="end_space"></p>

