@model TechnicalAdvisor.Models.ViewModels.ProductFormViewModel

@{
    ViewData["Title"] = "CreateProduct";
}

<h2>Create</h2>

<h4>Dealer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TypeOfProduct" class="control-label"></label>
                <input asp-for="TypeOfProduct" class="form-control" />
                <span asp-validation-for="TypeOfProduct" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PublicationCode" class="control-label"></label>
                <input asp-for="PublicationCode" class="form-control" />
                <span asp-validation-for="PublicationCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PictureName" class="control-label"></label>
                <input asp-for="PictureName" class="form-control" />
                <span asp-validation-for="PictureName" class="text-danger"></span>
            </div>



            <div class="form-group">
                <input type="submit" value="CreateProduct" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
